<section class="container">
    <h1>Characters</h1>
    <hr>

    <div class="row">
    
        {{#each characters}}
            <div class="col-md-4">
                <article class="character">
                    <hr/>
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" <img src="{{image}}">
                            <div class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">{{actor}}<br>{{house}}</p>
                                     <a href="/movie-characters/{{id}}" class="btn btn-dark btn-sm"> More details</a>
                            </div>
                    </div>        
                </article>
            </div>
        {{/each}}
    </div>
</section>