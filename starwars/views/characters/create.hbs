<div class="container">
    <div class="row justify-content-center cool-nav">
        <div class="col-md-6">
            <h1>Register new characters</h1>
            <hr>
            <form action="/characters/create" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <div class="md-3">

                        <label for="name"></label>
                        <input type="text" class="form-control" id="name" placeholder="nombre" name="name">
                    </div>

                </div>

                <div class="mb-3">
                    <label for="name">Fecha de nacimiento</label>
                    <input type="date" class="form-control" id="birth" placeholder="fecha de nacimiento" name="birth">
                </div>
                <div class="mb-3">
                    <label for="name">Descripción</label>
                    <input type="text" class="form-control" id="description" placeholder="descripción"
                        name="description">
                </div>

                <div class="mb-3">
                    <label>
                        <input name="avatar" type="file">
                    </label>

                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Seleccionar</label>
                    <select name="cast" class="form-select">
                        {{#each characters}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}

                    </select>
                </div>

                <div class="mb-3">
                    <input type="submit" class="btn btn-dark btn-sm" value="Registrar perro">
                </div>
            </form>
        </div>
    </div>
</div>